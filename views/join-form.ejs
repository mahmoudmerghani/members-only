<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join the Club - Members Only</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <p hidden aria-hidden="true" style="display: none;">7</p>
    <div class="container container-narrow">
        <div class="form-wrapper">
            <header class="form-header">
                <h1>Join the Club</h1>
                <p class="tagline">Enter the secret code to become a member</p>
            </header>

            <% if (locals.errors && errors.length > 0) { %>
                <div class="error-container">
                    <% errors.forEach(error => { %>
                        <div class="error-message">
                            Wrong password
                        </div>
                    <% }); %>
                </div>
            <% } %>

            <% if (locals.hint) { %>
                <div class="hint-container">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8Zm8-6.5a6.5 6.5 0 1 0 0 13 6.5 6.5 0 0 0 0-13ZM6.5 7.75A.75.75 0 0 1 7.25 7h1a.75.75 0 0 1 .75.75v2.75h.25a.75.75 0 0 1 0 1.5h-2a.75.75 0 0 1 0-1.5h.25v-2h-.25a.75.75 0 0 1-.75-.75ZM8 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"></path>
                    </svg>
                    <span><%= hint %></span>
                </div>
            <% } %>

            <form action="/users/join" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="password">Secret Code</label>
                    <input type="password" name="password" id="password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-full">Join Club</button>
            </form>

            <div class="form-footer">
                <p><a href="/">Back to home</a></p>
            </div>
        </div>
    </div>
    <script>
        console.log(6);
    </script>
</body>
</html>
