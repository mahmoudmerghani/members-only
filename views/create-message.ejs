<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Message - Members Only</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container container-narrow">
        <div class="form-wrapper">
            <header class="form-header">
                <h1>Create New Message</h1>
                <p class="tagline">Share your thoughts with the community</p>
            </header>

            <% if (locals.errors && errors.length > 0) { %>
                <div class="error-container">
                    <% errors.forEach(error => { %>
                        <div class="error-message">
                            <%= error.msg %>
                        </div>
                    <% }); %>
                </div>
            <% } %>

            <form action="/create-message" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" required>
                </div>
                <div class="form-group">
                    <label for="text">Message</label>
                    <textarea name="text" id="text" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-full">Post Message</button>
            </form>

            <div class="form-footer">
                <p><a href="/">Back to home</a></p>
            </div>
        </div>
    </div>
</body>
</html>
